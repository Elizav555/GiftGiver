<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/account"
        android:name="com.example.giftgiver.presentation.fragments.AccountFragment"
        android:label="@string/account"
        tools:layout="@layout/fragment_account">
        <action
            android:id="@+id/action_account_to_myWishlistFragment"
            app:destination="@id/myWishlistFragment" />
        <action
            android:id="@+id/action_account_to_startFragment"
            app:destination="@id/startFragment" />
    </fragment>
    <fragment
        android:id="@+id/calendar"
        android:name="com.example.giftgiver.presentation.fragments.CalendarFragment"
        android:label="@string/calendar"
        tools:layout="@layout/fragment_calendar" />
    <fragment
        android:id="@+id/cart"
        android:name="com.example.giftgiver.presentation.fragments.CartFragment"
        android:label="@string/cart"
        tools:layout="@layout/fragment_cart" />
    <navigation
        android:id="@+id/friends"
        app:startDestination="@id/friends_list">
        <fragment
            android:id="@+id/friends_list"
            android:name="com.example.giftgiver.presentation.fragments.FriendsListFragment"
            android:label="@string/friends_list"
            tools:layout="@layout/fragment_friends_list">
            <argument
                android:name="friendsListState"
                app:argType="com.example.giftgiver.utils.FriendsListState" />
            <action
                android:id="@+id/action_friendsListFragment_to_userFragment"
                app:destination="@id/user_fragment" />
        </fragment>
        <fragment
            android:id="@+id/user_fragment"
            android:name="com.example.giftgiver.presentation.fragments.UserFragment"
            android:label="fragment_user"
            tools:layout="@layout/fragment_user">
            <argument
                android:name="user"
                app:argType="com.example.giftgiver.domain.entities.User" />
            <action
                android:id="@+id/action_user_fragment_to_myWishlistFragment"
                app:destination="@id/myWishlistFragment" />
        </fragment>
    </navigation>
    <dialog
        android:id="@+id/addWishlistDialogFragment"
        android:name="com.example.giftgiver.presentation.fragments.AddWishlistDialogFragment"
        android:label="dialog_add_wishlist"
        tools:layout="@layout/dialog_add_wishlist" />
    <fragment
        android:id="@+id/myWishlistFragment"
        android:name="com.example.giftgiver.presentation.fragments.MyWishlistFragment"
        android:label="fragment_my_wishlist"
        tools:layout="@layout/fragment_my_wishlist" >
        <argument
            android:name="wishlistIndex"
            app:argType="integer" />
        <action
            android:id="@+id/action_myWishlistFragment_to_giftFragment"
            app:destination="@id/myGiftFragment" />
    </fragment>
    <fragment
        android:id="@+id/myGiftFragment"
        android:name="com.example.giftgiver.presentation.fragments.MyGiftFragment"
        android:label="fragment_my_gift"
        tools:layout="@layout/fragment_my_gift">
        <argument
            android:name="giftIndex"
            app:argType="integer" />
        <argument
            android:name="wishlistIndex"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.giftgiver.presentation.fragments.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_friends"
            app:destination="@id/friends" />
    </fragment>
</navigation>